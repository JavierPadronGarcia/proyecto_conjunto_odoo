<?xml version='1.0' encoding='utf-8'?>
<odoo>
  <data>
    <template id="empresas_contratadoras_report_template">
      <t t-call="web.html_container">
        <head>
          <style>
            .table1 {
            border-bottom: 1px solid #000000;
            border-top: 1px solid #000000;
            border-spacing: 0px;
            margin-left: auto;
            margin-right: auto;
            align: center;
            }
            .table1 tbody tr:nth-of-type(odd) {
            background-color: #d6dbdf;
            }
            .table2 {
            width: 100%;
            border-bottom: 1px solid #000000;
            align: center;
            }
            .tr2 {
            border-bottom: 1px solid #000000;
            }
            .title{
            align:center
            }
          </style>
        </head>
        <div class="page">
          <br />
          <t t-foreach='docs' t-as='o'>
            <h1 class='title' t-field='o.name' />
            <div class='details-section'>
              <div class='contact-number'>Numero contacto: <span t-field='o.contact_name' /></div>
              <div class='email'>Email: <span t-field='o.email' /></div>
              <div class='phone'>Tel√©fono: <span t-field='o.phone' /></div>
            </div>
            <br />
            <br />
            <table class="table1">
              <thead>
                <tr class="tr2">
                  <td width="300" align="center">
                    <font size="5">
                      <b>Proyecto</b>
                    </font>
                  </td>
                  <td width="300" align="center">
                    <font size="5">
                      <b>Num_tareas</b>
                    </font>
                  </td>
                </tr>
              </thead>
              <tbody>
                <tr class="tr1" t-foreach='o.proyect_ids' t-as='line'
                  align="center">
                  <td class="td1" width="300">
                    <span t-esc="line.name" />
                  </td>
                  <td class="td1" width="300" align="center">
                    <span t-esc="len(line.tasks_ids)" />
                  </td>
                </tr>
              </tbody>
            </table>
          </t>
        </div>
      </t>
    </template>
  </data>
</odoo> 